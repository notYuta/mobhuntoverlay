<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Dalamud.NET.Sdk/14.0.1">
  <PropertyGroup>
    <Version>1.0.0</Version>
    <DalamudPluginName>MobHuntOverlay</DalamudPluginName>
    <DalamudPluginAuthor>notYuta</DalamudPluginAuthor>
    <DalamudPluginDescription>Display B-rank mob spawn locations on the game map</DalamudPluginDescription>
    <DalamudPluginPunchline>B-rank mob location overlay for hunt bills</DalamudPluginPunchline>
    <PackageProjectUrl>https://github.com/notYuta/mobhuntoverlay</PackageProjectUrl>
    <PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Data\MobLocations.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>
</Project>
